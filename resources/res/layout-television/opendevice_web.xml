<?xml version="1.0" encoding="utf-8"?>
<com.huawei.openalliance.ad.ppskit.views.web.NetworkLoadStatusView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_view"
    android:background="@color/hiad_color_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ptr:nonNetworkText="@string/opendevice_network_no_available">
    <LinearLayout
        android:enabled="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/content_statement"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="48dp"
        android:paddingEnd="48dp">
        <TextView
            android:textSize="30sp"
            android:textColor="#e5ffffff"
            android:gravity="start|center_vertical"
            android:id="@+id/web_appbar_tv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="27dp"
            android:fontFamily="HwChinese-medium"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/content_webview"
                android:scrollbars="none"
                android:clipToPadding="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</com.huawei.openalliance.ad.ppskit.views.web.NetworkLoadStatusView>
