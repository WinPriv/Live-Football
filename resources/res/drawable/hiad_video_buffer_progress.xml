<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">
    <shape
        android:shape="ring"
        android:useLevel="false"
        android:thickness="2dp">
        <gradient
            android:startColor="@color/hiad_video_buffer_progress_start"
            android:endColor="@color/hiad_white"
            android:angle="0"
            android:type="sweep"/>
    </shape>
</rotate>
