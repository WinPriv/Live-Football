<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="true"
        android:id="@android:id/background"
        android:alpha="0.9">
        <shape>
            <corners android:radius="@dimen/hiad_16_dp"/>
            <solid android:color="@color/hiad_install_success_optimize_button_bg_color"/>
            <stroke
                android:width="@dimen/hiad_download_button_stroke_width"
                android:color="@color/hiad_install_success_optimize_button_bg_color"/>
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="false"
        android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/hiad_16_dp"/>
            <solid android:color="@color/hiad_install_success_optimize_button_bg_color"/>
            <stroke
                android:width="@dimen/hiad_download_button_stroke_width"
                android:color="@color/hiad_install_success_optimize_button_bg_color"/>
        </shape>
    </item>
    <item
        android:state_enabled="false"
        android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/hiad_16_dp"/>
            <solid android:color="@color/hiad_install_success_optimize_button_bg_color"/>
            <stroke
                android:width="@dimen/hiad_download_button_stroke_width"
                android:color="@color/hiad_install_success_optimize_button_bg_color"/>
        </shape>
    </item>
</selector>
