<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#66000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.anythink.basead.ui.WaveAnimImageView
        android:id="@+id/anythink_myoffer_wave_anim_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"/>
    <com.anythink.basead.ui.WaveAnimImageView
        android:id="@+id/anythink_myoffer_wave_anim_image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/anythink_myoffer_guide_to_click_finger"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/anythink_myoffer_guide_to_click_finger"
        android:layout_alignLeft="@+id/anythink_myoffer_wave_anim_image"
        android:layout_alignTop="@+id/anythink_myoffer_wave_anim_image"/>
    <TextView
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/anythink_myoffer_cta_learn_more"
        android:layout_below="@+id/anythink_myoffer_guide_to_click_finger"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
