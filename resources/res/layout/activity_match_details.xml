<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/Back"
        android:background="@drawable/bc"
        android:padding="6dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back"
        android:alpha="0.6"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:tint="@color/white"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Match Details"
        android:fontFamily="@font/black"
        android:paddingEnd="40dp"
        android:layout_toEndOf="@+id/Back"
        android:layout_alignParentEnd="true"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/Banner"
        android:layout_below="@+id/Back">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/t12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="About Match :"
                android:fontFamily="@font/black"/>
            <RelativeLayout
                android:id="@+id/t13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/MatchDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"/>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/ABoutShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/todaymatchescardshimmer"/>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/ntv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <FrameLayout
                    android:id="@+id/NativeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.anythink.nativead.api.ATNativeAdView
                    android:layout_gravity="center"
                    android:id="@+id/native_ad_view"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <include
                        android:id="@+id/native_selfrender_view"
                        layout="@layout/native_ad_item"/>
                </com.anythink.nativead.api.ATNativeAdView>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/Shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="800">
                    <include layout="@layout/shimmersmallnative"/>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Match Stats :"
                android:fontFamily="@font/black"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/yellowcard"
                        android:scaleType="center"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Yellow Card"
                        android:alpha="0.9"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/redcard"
                        android:scaleType="center"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Red Card"
                        android:alpha="0.9"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/yellowredcard"
                        android:scaleType="center"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2nd card "
                        android:alpha="0.9"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/change"
                        android:scaleType="center"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Changed"
                        android:alpha="0.9"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/goal"
                        android:scaleType="center"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Goal"
                        android:alpha="0.9"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/Empty1"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/allleagues"
                        android:alpha="0.4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No data is available right now"
                        android:fontFamily="@font/bold"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/FirstHalfItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/FirstHalfShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="500">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                        <include layout="@layout/todaymatchescardshimmer"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/Banner"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
