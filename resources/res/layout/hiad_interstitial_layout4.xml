<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/interstitial_content_view"
    android:background="@color/hiad_emui_color_subbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.huawei.openalliance.ad.ppskit.views.InterstitialVideoView
        android:gravity="center"
        android:id="@+id/interstitial_video_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hiad_210_dp"/>
    <FrameLayout
        android:id="@+id/video_control_view"
        android:padding="@dimen/hiad_20_dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_75_dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="@dimen/hiad_40_dp"
            android:layout_height="@dimen/hiad_40_dp"
            android:src="@drawable/hiad_play"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/interstitial_image_view"
        android:background="@color/hiad_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hiad_210_dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>
    <com.huawei.openalliance.ad.ppskit.views.PPSAppDetailTemplateView
        android:id="@+id/interstitial_app_detail_template"
        android:background="@color/hiad_transparent"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_266_dp"
        app:insreTemplate="4"/>
    <TextView
        android:textSize="@dimen/hiad_14_dp"
        android:textColor="@color/hiad_60_percent_black"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/interstitial_app_detail_appdesc_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hiad_24_dp"
        android:layout_marginTop="@dimen/hiad_32_dp"
        android:layout_marginRight="@dimen/hiad_24_dp"
        android:maxLines="2"
        android:layout_below="@+id/interstitial_app_detail_template"
        android:fontFamily="HwChinese-medium"
        android:layout_marginStart="@dimen/hiad_24_dp"
        android:layout_marginEnd="@dimen/hiad_24_dp"/>
    <com.huawei.openalliance.ad.ppskit.views.PPSAppDownLoadWithAnimationView
        android:id="@+id/interstitial_app_download_btn_template"
        android:background="@color/hiad_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hiad_96_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/hiad_app_detail_padding"
        android:layout_marginEnd="@dimen/hiad_app_detail_padding"/>
    <ImageView
        android:id="@+id/interstitial_close"
        android:padding="@dimen/hiad_8_dp"
        android:visibility="invisible"
        android:layout_width="@dimen/hiad_40_dp"
        android:layout_height="@dimen/hiad_40_dp"
        android:layout_marginTop="@dimen/hiad_8_dp"
        android:layout_marginRight="@dimen/hiad_8_dp"
        android:src="@drawable/hiad_close_button"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/hiad_8_dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textSize="@dimen/hiad_12_dp"
        android:textColor="@color/hiad_font"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/insterstitial_count_down"
        android:background="@drawable/hiad_bg_ad_label"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hiad_16_dp"
        android:layout_marginTop="@dimen/hiad_16_dp"
        android:minHeight="@dimen/hiad_24_dp"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingStart="@dimen/hiad_5_dp"
        android:paddingEnd="@dimen/hiad_5_dp"
        android:layout_marginStart="@dimen/hiad_16_dp"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/hiad_16_dp"
        android:layout_marginBottom="@dimen/hiad_8_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginEnd="@dimen/hiad_16_dp"
        android:layout_alignParentEnd="true">
        <com.huawei.openalliance.ad.ppskit.views.ChoicesView
            android:id="@+id/interstitial_info"
            android:padding="@dimen/hiad_8_dp"
            android:layout_width="@dimen/hiad_32_dp"
            android:layout_height="@dimen/hiad_32_dp"/>
        <ImageView
            android:id="@+id/interstitial_oversea_mute_icon"
            android:padding="@dimen/hiad_8_dp"
            android:visibility="gone"
            android:layout_width="@dimen/hiad_32_dp"
            android:layout_height="@dimen/hiad_32_dp"
            android:src="@drawable/hiad_video_unmute"
            android:layout_toRightOf="@+id/interstitial_info"
            android:layout_toEndOf="@+id/interstitial_info"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/hiad_bg_ad_source"
        android:paddingLeft="@dimen/hiad_2_dp"
        android:paddingRight="@dimen/hiad_2_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hiad_16_dp"
        android:layout_marginRight="@dimen/hiad_80_dp"
        android:layout_marginBottom="@dimen/hiad_16_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:paddingStart="@dimen/hiad_2_dp"
        android:paddingEnd="@dimen/hiad_2_dp"
        android:layout_marginStart="@dimen/hiad_16_dp"
        android:layout_marginEnd="@dimen/hiad_80_dp"
        android:layout_alignParentStart="true">
        <com.huawei.openalliance.ad.ppskit.views.PPSLabelView
            android:gravity="center"
            android:id="@+id/interstitial_oversea_ad_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hiad_2_dp"
            android:layout_marginRight="@dimen/hiad_2_dp"
            android:minHeight="@dimen/hiad_16_dp"
            android:text="@string/hiad_ad_label_new"
            android:layout_marginStart="@dimen/hiad_2_dp"
            android:layout_marginEnd="@dimen/hiad_2_dp"
            style="@style/HIAD_ad_source_text"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/interstitial_ad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hiad_2_dp"
            android:layout_marginRight="@dimen/hiad_2_dp"
            android:minHeight="@dimen/hiad_16_dp"
            android:singleLine="true"
            android:layout_marginStart="@dimen/hiad_2_dp"
            android:layout_marginEnd="@dimen/hiad_2_dp"
            style="@style/HIAD_ad_source_text"/>
    </LinearLayout>
    <android.widget.ProgressBar
        android:id="@+id/interstitial_progress"
        android:layout_width="@dimen/hiad_video_buffering_w"
        android:layout_height="@dimen/hiad_video_buffering_w"
        android:layout_marginTop="@dimen/hiad_79_dp"
        android:layout_centerHorizontal="true"
        style="@style/HIAD_Video_Buffer_ProgressBar"/>
</RelativeLayout>
