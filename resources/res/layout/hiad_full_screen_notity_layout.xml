<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/app_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_start"
        android:layout_width="@dimen/hiad_0_dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/app_view"
        android:background="@drawable/hiad_installed_notify_view_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_16_dp"
        android:layout_marginBottom="@dimen/hiad_16_dp"
        android:paddingStart="@dimen/hiad_12_dp"
        android:paddingEnd="@dimen/hiad_12_dp"
        android:layout_marginStart="@dimen/hiad_12_dp"
        android:layout_marginEnd="@dimen/hiad_12_dp"
        android:elevation="@dimen/hiad_7_dp">
        <ImageView
            android:id="@+id/app_icon"
            android:background="@drawable/hiad_default_app_icon"
            android:layout_width="@dimen/hiad_42_dp"
            android:layout_height="@dimen/hiad_42_dp"
            android:layout_marginTop="@dimen/hiad_16_dp"
            android:layout_marginRight="@dimen/hiad_12_dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/hiad_12_dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/app_close"
            android:padding="@dimen/hiad_4_dp"
            android:layout_width="@dimen/hiad_24_dp"
            android:layout_height="@dimen/hiad_24_dp"
            android:layout_marginTop="@dimen/hiad_16_dp"
            android:layout_marginRight="@dimen/hiad_12_dp"
            android:src="@drawable/hiad_installed_notify_close"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/hiad_12_dp"
            android:layout_alignParentEnd="true"/>
        <RelativeLayout
            android:id="@+id/app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/app_close"
            android:layout_toRightOf="@+id/app_icon"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/app_close"
            android:layout_toEndOf="@+id/app_icon">
            <View
                android:id="@+id/app_padding_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hiad_18_dp"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/app_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hiad_2_dp"
                android:lines="1"
                android:includeFontPadding="false"
                android:layout_below="@+id/app_padding_top"
                android:textAlignment="viewStart"
                style="@style/HIAD_install_success_app_title"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/notify_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hiad_2_dp"
                android:text="@string/hiad_installed_description"
                android:lines="1"
                android:layout_below="@+id/app_name_tv"
                android:textAlignment="viewStart"
                style="@style/HIAD_install_success_desc_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hiad_18_dp"
                android:layout_below="@+id/notify_tv"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/layout_end"
        android:layout_width="@dimen/hiad_0_dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
