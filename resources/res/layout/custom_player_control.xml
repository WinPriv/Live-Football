<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:theme="@style/ClickableView"
        android:id="@+id/exo_lock"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_outline_lock_open"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/exo_back"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true"
        app:tint="@color/white"/>
    <ImageView
        android:id="@+id/exo_rotate"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:src="@drawable/screen_rotation"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-2dp"
        android:layout_toStartOf="@+id/exo_lock"
        android:layout_alignParentEnd="true"
        app:tint="@color/white"/>
    <ImageView
        android:id="@+id/exo_pip"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/exo_pip"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-3dp"
        android:layout_toStartOf="@+id/exo_rotate"
        android:layout_alignParentEnd="true"
        app:tint="@color/white"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/sec_controlvid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:theme="@style/ClickableView"
            android:id="@+id/exo_rew"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_exo_icon_rewind"/>
        <ImageView
            android:theme="@style/ClickableView"
            android:id="@+id/exo_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_exo_icon_play"/>
        <ImageView
            android:theme="@style/ClickableView"
            android:id="@+id/exo_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_exo_icon_pause"/>
        <ImageView
            android:theme="@style/ClickableView"
            android:id="@+id/exo_ffwd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_exo_icon_fastforward"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sec_controlvid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black"/>
            <TextView
                android:textColor="#cbcdc8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="/"
                android:fontFamily="@font/black"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textColor="#cbcdc8"
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/black"/>
        </LinearLayout>
        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            app:buffered_color="#95989f"
            app:played_color="@color/colorPrimary"
            app:scrubber_color="@color/colorPrimary"
            app:unplayed_color="#45424e"/>
    </LinearLayout>
</RelativeLayout>
