<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/haid_masking_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/hiad_click_hand_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/hiad_click_hand"
            android:padding="@dimen/hiad_6_dp"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:src="@drawable/hiad_click_hint_hand"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hiad_click_arc_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-18dp"
        android:layout_above="@+id/hiad_click_hand_container"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/hiad_click_arc"
            android:padding="@dimen/hiad_6_dp"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/hiad_2_dp"
            android:src="@drawable/hiad_click_hint_arc"/>
    </RelativeLayout>
</RelativeLayout>
