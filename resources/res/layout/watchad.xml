<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hiad_10_dp"
            android:layout_marginBottom="@dimen/hiad_10_dp"
            android:text="Watch Ad To Watch Match"
            android:fontFamily="@font/medium"/>
        <Button
            android:textSize="16sp"
            android:id="@+id/Watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch AD"
            android:textAllCaps="false"
            android:fontFamily="@font/black"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
