<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#270d39"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/Back"
        android:background="@drawable/bc"
        android:padding="6dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back"
        android:alpha="0.6"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:tint="@color/white"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/Banner"
        android:layout_below="@+id/Back">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/LiveEvents"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/live_football"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="start"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live football matches"
                            android:fontFamily="@font/black"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="watch latest live football matches for free"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="start"
                            android:id="@+id/Watch"
                            android:background="@drawable/btnbc"
                            android:layout_width="37dp"
                            android:layout_height="34dp"
                            android:text="Watch Now"
                            android:textAllCaps="false"
                            android:fontFamily="@font/black"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/ntv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <FrameLayout
                    android:id="@+id/NativeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.anythink.nativead.api.ATNativeAdView
                    android:layout_gravity="center"
                    android:id="@+id/native_ad_view"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <include
                        android:id="@+id/native_selfrender_view"
                        layout="@layout/native_ad_item"/>
                </com.anythink.nativead.api.ATNativeAdView>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/Shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="800">
                    <include layout="@layout/shimmersmallnative"/>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/Banner"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
