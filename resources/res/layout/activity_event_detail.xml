<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#270d39"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/Back"
        android:background="@drawable/bc"
        android:padding="6dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back"
        android:alpha="0.6"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        app:tint="@color/white"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/Banner"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="#270d39"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:id="@+id/MatchTime"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/MatchTime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/Team1Logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/team1image"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/Team1Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="dudghj sclkjkcsjbsjc"
                            android:fontFamily="@font/regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/MatchTime"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/Team2Logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/team1image"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/Team2Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="dudghj sclkjkcsjbsjc"
                            android:fontFamily="@font/regular"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/playicon"
                    android:layout_centerInParent="true"
                    android:elevation="5dp"/>
            </RelativeLayout>
            <TextView
                android:textSize="17sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/EventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="ckkjnvwnvownvwnlkv"
                android:fontFamily="@font/regular"/>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/ntv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <FrameLayout
                    android:id="@+id/NativeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.anythink.nativead.api.ATNativeAdView
                    android:layout_gravity="center"
                    android:id="@+id/native_ad_view"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <include
                        android:id="@+id/native_selfrender_view"
                        layout="@layout/native_ad_item"/>
                </com.anythink.nativead.api.ATNativeAdView>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/Shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="800">
                    <include layout="@layout/shimmersmallnative"/>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/Banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
