<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/app_layout_optimize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_start_optimize"
        android:layout_width="@dimen/hiad_0_dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/app_view_optimize"
        android:background="@drawable/hiad_installed_notify_view_optimize_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hiad_12_dp"
        android:layout_marginRight="@dimen/hiad_12_dp"
        android:layout_marginBottom="@dimen/hiad_12_dp"
        android:layout_marginStart="@dimen/hiad_12_dp"
        android:layout_marginEnd="@dimen/hiad_12_dp"
        android:elevation="@dimen/hiad_7_dp">
        <ImageView
            android:id="@+id/app_icon_optimize"
            android:background="@drawable/hiad_default_app_icon"
            android:layout_width="@dimen/hiad_64_dp"
            android:layout_height="@dimen/hiad_64_dp"
            android:layout_marginTop="@dimen/hiad_24_dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/app_close_optimize"
            android:background="@drawable/hiad_installed_notify_optimize_close"
            android:layout_width="@dimen/hiad_24_dp"
            android:layout_height="@dimen/hiad_24_dp"
            android:layout_marginTop="@dimen/hiad_16_dp"
            android:layout_marginRight="@dimen/hiad_16_dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/hiad_16_dp"
            android:layout_alignParentEnd="true"/>
        <RelativeLayout
            android:id="@+id/app_description_optimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_icon_optimize">
            <View
                android:id="@+id/app_padding_top_optimize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hiad_16_dp"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/app_name_tv_optimize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hiad_24_dp"
                android:layout_marginRight="@dimen/hiad_24_dp"
                android:layout_marginBottom="@dimen/hiad_8_dp"
                android:lines="1"
                android:includeFontPadding="false"
                android:layout_below="@+id/app_padding_top_optimize"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/hiad_24_dp"
                android:layout_marginEnd="@dimen/hiad_24_dp"
                style="@style/HIAD_install_success_optimize_app_title"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/notify_tv_optimize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hiad_24_dp"
                android:layout_marginRight="@dimen/hiad_24_dp"
                android:text="@string/hiad_installed_and_play_now"
                android:lines="1"
                android:layout_below="@+id/app_name_tv_optimize"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/hiad_24_dp"
                android:layout_marginEnd="@dimen/hiad_24_dp"
                style="@style/HIAD_install_success_optimize_desc_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hiad_16_dp"
                android:layout_below="@+id/notify_tv_optimize"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/app_valid_click_optimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/hiad_72_dp"
            android:layout_below="@+id/app_description_optimize">
            <Button
                android:ellipsize="end"
                android:id="@+id/app_open_btn_optimize"
                android:paddingLeft="@dimen/hiad_16_dp"
                android:paddingRight="@dimen/hiad_16_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hiad_24_dp"
                android:layout_marginTop="@dimen/hiad_16_dp"
                android:layout_marginRight="@dimen/hiad_24_dp"
                android:layout_marginBottom="@dimen/hiad_16_dp"
                android:minHeight="@dimen/hiad_40_dp"
                android:text="@string/hiad_click_open"
                android:maxLines="1"
                android:paddingStart="@dimen/hiad_16_dp"
                android:paddingEnd="@dimen/hiad_16_dp"
                android:layout_marginStart="@dimen/hiad_24_dp"
                android:layout_marginEnd="@dimen/hiad_24_dp"
                style="@style/hiad_install_success_optimize_button_bg_color"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/layout_end_optimize"
        android:layout_width="@dimen/hiad_0_dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
