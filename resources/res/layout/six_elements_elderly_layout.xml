<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:ellipsize="end"
        android:id="@+id/six_elements_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:includeFontPadding="false"
        android:textAlignment="viewStart"
        style="@style/HIAD_six_elements_title_text"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_2_dp">
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/hiad_4_dp"
            android:text="@string/hiad_ad_label_new"
            android:maxLines="1"
            android:includeFontPadding="false"
            style="@style/HIAD_six_elements_desc_text"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/six_elements_develop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:textAlignment="viewStart"
            style="@style/HIAD_six_elements_desc_text"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_2_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:ellipsize="end"
            android:id="@+id/six_elements_splicing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:includeFontPadding="false"
            style="@style/HIAD_six_elements_desc_text"/>
    </LinearLayout>
</LinearLayout>
