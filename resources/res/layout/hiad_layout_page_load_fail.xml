<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/hiad_id_load_fail_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hiad_ic_load_fail"
            android:scaleType="centerInside"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#a0a0a0"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hiad_12_dp"
            android:layout_marginTop="@dimen/hiad_4_dp"
            android:layout_marginRight="@dimen/hiad_12_dp"
            android:text="@string/hiad_page_load_failed"/>
    </LinearLayout>
</RelativeLayout>
