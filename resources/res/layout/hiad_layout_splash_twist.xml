<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/hiad_twist_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center"
        android:background="@drawable/hiad_splash_circle_bg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:elevation="10dp">
        <ImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/hiad_phone_jpg"
            android:layout_width="52dp"
            android:layout_height="67dp"
            android:src="@drawable/hiad_shake_phone"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/hiad_18_dp"
        android:textColor="@color/hiad_font"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/hiad_twist_string"
        android:paddingLeft="@dimen/hiad_4_dp"
        android:paddingRight="@dimen/hiad_4_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_20_dp"
        android:text="@string/hiad_twist_screen"
        android:lines="1"
        android:shadowColor="@color/hiad_source_shadow_color"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:layout_below="@+id/hiad_phone_jpg"
        android:fontFamily="HwChinese-medium"
        android:paddingStart="@dimen/hiad_4_dp"
        android:paddingEnd="@dimen/hiad_4_dp"/>
    <com.huawei.openalliance.ad.views.AutoSizeTextView
        android:textSize="@dimen/hiad_16_dp"
        android:textColor="@color/hiad_90_white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/hiad_twist_desc"
        android:paddingLeft="@dimen/hiad_4_dp"
        android:paddingRight="@dimen/hiad_4_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hiad_4_dp"
        android:text="@string/hiad_jump_desc"
        android:shadowColor="@color/hiad_source_shadow_color"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:layout_below="@+id/hiad_twist_string"
        android:fontFamily="HwChinese-medium"
        android:textAlignment="center"
        android:paddingStart="@dimen/hiad_4_dp"
        android:paddingEnd="@dimen/hiad_4_dp"/>
</LinearLayout>
