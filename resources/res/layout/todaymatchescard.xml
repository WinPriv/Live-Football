<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/gray">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBaseline_toBottomOf="@+id/View"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/Timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ht - 22:00"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/time"
                android:fontFamily="@font/medium"
                android:drawableTint="@color/black"/>
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="( 2 - 0 )"
                android:fontFamily="@font/bold"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/Team1Image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/team1image"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tra"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/Team2Image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/team2image"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tra"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/Team1Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Brucia durtmund"
            android:maxLines="2"
            android:fontFamily="@font/light"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Team1Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/Team2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Brucia durtmund"
            android:maxLines="2"
            android:fontFamily="@font/light"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Team2Image"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/View"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
