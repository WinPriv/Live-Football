<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/hiad_id_back_btn"
        android:layout_width="@dimen/hiad_32_dp"
        android:layout_height="@dimen/hiad_32_dp"
        android:src="@drawable/hiad_close_btn"
        android:scaleType="centerInside"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/hiad_emui_white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/hiad_id_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hiad_32_dp"
        android:layout_marginLeft="@dimen/hiad_2_dp"
        android:layout_marginRight="@dimen/hiad_2_dp"
        android:text="@string/hiad_detail"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/hiad_id_menu_btn"
        android:layout_toRightOf="@+id/hiad_id_back_btn"
        android:layout_marginStart="@dimen/hiad_2_dp"
        android:layout_marginEnd="@dimen/hiad_2_dp"
        android:layout_toStartOf="@+id/hiad_id_menu_btn"
        android:layout_toEndOf="@+id/hiad_id_back_btn"/>
    <ImageView
        android:id="@+id/hiad_id_menu_btn"
        android:layout_width="@dimen/hiad_32_dp"
        android:layout_height="@dimen/hiad_32_dp"
        android:src="@drawable/hiad_ic_details_more_normal"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</merge>
